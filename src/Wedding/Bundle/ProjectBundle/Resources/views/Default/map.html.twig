{% extends "WeddingProjectBundle::layout.html.twig" %}

{% block body %}
    {% block map_body %}
        <div id="container">
            <div id="map">
                <p>Veuillez patienter pendant le chargement de la carte...</p>
            </div>
            <div id="destinationForm">
                <form action="" method="get" name="direction" id="direction">
                    <label>Point de départ :</label>
                    <input type="text" name="origin" id="origin">
                    <label>Destination :</label>
                    <input type="text" name="destination" id="destination">
                    <input type="button" value="Calculer l'itinéraire" onclick="javascript:calculate()">
                </form>

            </div>
            <div id="panel"></div>
        </div>
    {% endblock %}
    {% block javascript %}
        <script type="text/javascript" src="{{ asset('bundles/weddingproject/js/jquery.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('bundles/weddingproject/js/jquery-ui.min.js') }}"></script>
        <script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>
        <script type="text/javascript" src="{{ asset('bundles/weddingproject/js/functions.js') }}"></script>
    {% endblock %}
{% endblock %}